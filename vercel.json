{
    "version": 2,
    "builds": [
      { "src": "./src", "use": "@vercel/static-build" },
      { "src": "./src/api/**/*.js", "use": "@vercel/node" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "api/$1" },
      { "src": "/(.*)", "dest": "src/$1", "headers": { "Content-Type": "text/html" } }
    ]
  }
  